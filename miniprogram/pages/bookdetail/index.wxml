<view class="reader-container">
  <!-- 顶部导航栏 -->
  <van-nav-bar title="{{book.title}}" left-text="返回" left-arrow bind:click-left="onBack" custom-class="reader-navbar" />

  <!-- 阅读区域 -->
  <view class="reader-content" id="readerContent">
    <!-- 手势翻页区域 -->
    <view class="page-swipe-area" bindtouchstart="onTouchStart" bindtouchmove="onTouchMove" bindtouchend="onTouchEnd" bindtouchcancel="onTouchEnd">
      <!-- 翻页动画容器 -->
      <view class="page-container {{pageAnimationClass}}">
        <!-- 上一页（用于翻页动画） -->
        <view class="page prev-page" style="{{pageStyle}}" wx:if="{{showPrevPage}}">
          <text class="page-text" selectable user-select>{{prevPageText}}</text>
        </view>

        <!-- 当前页 -->
        <view class="page current-page" style="{{pageStyle}}">
          <text class="page-text" selectable user-select>{{currentPageText}}</text>
        </view>

        <!-- 下一页 -->
        <view class="page next-page" style="{{pageStyle}}" wx:if="{{showNextPage}}">
          <text class="page-text" selectable user-select>{{nextPageText}}</text>
        </view>
      </view>

      <!-- 点击翻页区域 -->
      <view class="tap-area left-tap-area" bindtap="onTapPrev"></view>
      <view class="tap-area right-tap-area" bindtap="onTapNext"></view>
    </view>

    <!-- 进度指示器 -->
    <!-- <view class="progress-indicator">
