<!--components/upload/index.wxml-->
<view bind:onclick="chooseFile" style="width: 50px; height: 50px">
	<van-icon
	 wx:if="{{ !showProgress }}"
	 name="plus"
	 size="30px"
	 style="width: 50px; height: 50px"
	/>
	<van-circle wx:if="{{ showProgress }}" value="{{ progress }}" text="{{ progress }}%" />
</view>
<van-uploader
 max-count="1"
 accept="file"
 max-size="52428800"
 extension="{{ supportFormats }}"
 disabled="{{ showProgress }}"
 use-before-read
 bind:before-read="chooseFile"
 bind:after-read="uploadToCloud"
>
	<van-icon wx:if="{{ !showProgress }}" name="plus" size="50px" />
	<van-circle wx:if="{{ showProgress }}" value="{{ progress }}" text="{{ progress }}%" />
</van-uploader>

