<!--components/upload/index.wxml-->
<view bind:tap="chooseFile">
	<van-icon
	 wx:if="{{ !showProgress }}"
	 name="plus"
	 size="30px"
	 style="width: 50px; height: 50px"
	/>
	<van-circle
	 size="46"
	 color="#07c160"
	 stroke-width="2"
	 clockwise="false"
	 wx:if="{{ showProgress }}"
	 value="{{ progress }}"
	>
		<view style="font-size: 12px">{{progress}}%</view>
	</van-circle>
</view>

